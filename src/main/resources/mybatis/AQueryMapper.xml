<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="AQueryMapper">
	
	<resultMap id="mRetHospitalMap" 		type="hospitalModel">
		<result property="id"  			column="hospitalId"/>
		<result property="name"  		column="hospitalName"/>
		<result property="address"  		column="hospitalAddr"/>
	</resultMap>
   
    <select id="AQueryMapper.queryFeedbackCnt"  parameterType="queryModel"  resultType="long">
      <![CDATA[
        select count(1) as cnt
        from tab_feedback a
      ]]>
      <where>
        <if test="startTime != null">
          a.feedbackTime >= #{startTime}          
        </if>
        <if test="startTime != null">
          a.feedbackTime >= #{startTime}          
        </if>
      </where>
    </select>
    
    <!-- 查询医生建议执行情况 -->     
    <select id="AQueryMapper.queryFeedback"   parameterType="queryModel"  resultMap="mDoctorAdviceMap">
      <![CDATA[
        select a.id, a.doctorAdviceId, a.doctorAdvicePerformace, a.recordTime
        from tab_doctor_advice_performace a
        where a.doctorAdviceId = #{adviceId}
        order by a.recordTime
        limit #{startNum}, #{rows}
      ]]>
    </select>
	
</mapper>
